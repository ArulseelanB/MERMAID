{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./.build/*.ts",
    "./.esbuild/*.ts",
    "./.vite/*.ts",
    "./cypress.config.ts",
    "./tests/**/*.ts",
    "./scripts/**/*.ts",
    "./cypress/**/*.ts",
    "./__mocks__/**/*.ts",
    "./demos/dev/**/*.ts",
    "./vite.config.ts",
    "./vitest.workspace.js",
    "eslint.config.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
